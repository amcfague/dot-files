remoterepository = Remote
# Refresh every minute (decimal numbers possible)
autorefresh = 0.5
# Always do quick updates
quick = -1

[Repository Local]
type = Maildir
localfolders = ~/Mail/amcfague

[Repository Remote]
type = IMAP
